{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        // "react-app",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "root": true,
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off"
    }
}
